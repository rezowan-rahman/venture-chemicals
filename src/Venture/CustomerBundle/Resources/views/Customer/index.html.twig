{% extends 'VentureCustomerBundle::layout.html.twig' %}

{% block title %} Customer Listing {% endblock%}

{% block middle %}
    {{ parent() }}

    <div class="row">
        <div class="col-md-12">
            <h4>CUSTOMERS</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="border"></div>
        </div>
    </div>

    <div class="row space-top">
        <div class="col-md-2">
            <button type="button"
                    data-path="{{ path('venture_new_customer') }}"
                    class="btn btn-default btn-sm target">Add New</button>
        </div>
        <div class="col-md-10"></div>
    </div>

    <div class="row space-top">
        <div class="col-md-12">
            <div class="border"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="space-top">List of all active customers</div>
        </div>
        <div class="col-md-6">
            <div class="checkbox float-right">
                <label>
                    {% if status %}
                        <input type = "checkbox" onchange="window.location='{{ path('venture_customer_list',  {'type': 'show_all'}) }}'"/> Show Inactive
                    {% else %}
                        <input type = "checkbox" checked = "checked" onchange="window.location='{{ path('venture_customer_list',  {'type': 'show_active'}) }}'"/> Show Inactive
                    {% endif %}
                </label>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="border"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Customer Name</th>
                    <th>Phone Number</th>
                    <th>E-mail</th>
                    <th>Contact</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a class="my_custom_anchor" href="{{ path('venture_customer_details',  {'id': entity.id}) }}">{{ entity.name }}</a></td>
                        <td><a class="my_custom_anchor" href="{{ path('venture_customer_details',  {'id': entity.id}) }}">{{ entity.phoneNumber }}</a></td>
                        <td><a class="my_custom_anchor" href="{{ path('venture_customer_details',  {'id': entity.id}) }}">{{ entity.contact1Email }}</a></td>
                        <td><a class="my_custom_anchor" href="{{ path('venture_customer_details',  {'id': entity.id}) }}">{{ entity.contact1 }}</a></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">There is no Customer listed yet</td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot></tfoot>
            </table>
        </div>
    </div>
{% endblock %}